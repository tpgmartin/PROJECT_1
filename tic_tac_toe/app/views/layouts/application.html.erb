<!DOCTYPE html>
<html>
<head>
  <title>TicTacToe</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <header>
      <!-- Want to have a static page header -->
      <img src="_blank">
      <nav>
        <li>
          <%=link_to 'Home', welcomes_path %> |
        </li>
        <li>
          <%=link_to 'Users', users_path %> |
        </li>
        <li>
          <%=link_to 'Games', games_path %> 
        </li>
        <% flash.each do |name, message| %>
          <div class="flash-message flash-message-<%= name %>">
            <%= message %>
          </div>
        <% end %>
      </nav>
      <h1>Title</h1>
    </header>

  <div id="content">

  <section id="main-section">
    <% if current_user %>
     <p> hello, <%= current_user.email %> </p>
     <%= link_to 'Logout', sessions_path(session), method: :delete, data: {confirm: ‘Are you sure?’} %>
    <% else %>
     <%= link_to 'Please login', login_path %>
    <% end %>
    <%= yield %>
  </section>

  </div>
    <footer>
      <p>Legal info goes here</p>
    </footer>
  </div>
</body>
</html>
